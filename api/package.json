{
  "name": "emeal-api",
  "version": "0.1.0",
  "description": "Backend code for emeal",
  "author": "Derek Wene",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "nodemon -L --watch \"src/**/*\" --watch \"css/sass/v2/source/**/*\" -e scss,ts --ignore \"src/migrations\" --ignore \"src/tests\" --exec ts-node --transpile-only src/server.ts",
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "debug": "npm run build && npm run watch-debug",
    "deploy": "sh deploy.sh"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.5.5",
    "async": "^3.1.0",
    "aws-sdk": "^2.649.0",
    "bcrypt-nodejs": "^0.0.3",
