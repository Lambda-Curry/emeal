    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-mongo": "^3.0.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-session": "^1.17.0",
    "express-validator": "^6.2.0",
    "fast-csv": "^4.1.3",
    "fbgraph": "^1.4.4",
    "jwt-simple": "^0.5.6",
    "lodash": "^4.17.15",
    "lusca": "^1.6.1",
    "moment": "^2.24.0",
    "mongoose": "^5.7.5",
    "multer": "^1.4.2",
    "nodemailer": "^6.3.0",
    "pug": "^2.0.4",
    "stripe": "^8.39.0",
    "tempfile": "^3.0.0",
    "uuid": "^7.0.2",
    "winston": "^3.2.1",
    "yup": "^0.28.3"
  },
